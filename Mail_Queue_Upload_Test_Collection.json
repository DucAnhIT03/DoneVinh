{
  "info": {
    "name": "Mail Queue Upload Test Collection",
    "description": "Collection để test mail queue và upload file với Postman",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Email Test - Config",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/email-test/config",
          "host": ["{{baseUrl}}"],
          "path": ["email-test", "config"]
        },
        "description": "Kiểm tra cấu hình email"
      }
    },
    {
      "name": "2. Email Test - Send Direct",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"to\": \"test@example.com\",\n  \"subject\": \"Test Email Direct\",\n  \"message\": \"Hello from Bus Ticket API! This is a direct email test.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/email-test/send",
          "host": ["{{baseUrl}}"],
          "path": ["email-test", "send"]
        },
        "description": "Gửi email trực tiếp"
      }
    },
    {
      "name": "3. Email Test - Welcome Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"to\": \"newuser@example.com\",\n  \"name\": \"John Doe\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/email-test/welcome",
          "host": ["{{baseUrl}}"],
          "path": ["email-test", "welcome"]
        },
        "description": "Gửi welcome email"
      }
    },
    {
      "name": "4. Email Test - Queue Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"to\": \"test@example.com\",\n  \"subject\": \"Queue Email Test\",\n  \"message\": \"This email was sent via queue system\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/email-test/queue",
          "host": ["{{baseUrl}}"],
          "path": ["email-test", "queue"]
        },
        "description": "Gửi email qua queue"
      }
    },
    {
      "name": "5. File Upload - Single File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/upload/single",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "single"]
        },
        "description": "Upload file đơn"
      }
    },
    {
      "name": "6. File Upload - Multiple Files",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "files",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/upload/multiple",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "multiple"]
        },
        "description": "Upload nhiều file"
      }
    },
    {
      "name": "7. File Upload - Async (Queue)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "userId",
              "value": "1",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/upload/async",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "async"]
        },
        "description": "Upload file async qua queue"
      }
    },
    {
      "name": "8. File Upload - List Files",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/list",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "list"]
        },
        "description": "Danh sách files đã upload"
      }
    },
    {
      "name": "9. File Upload - File Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/stats/{{filename}}",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "stats", "{{filename}}"]
        },
        "description": "Thống kê file cụ thể"
      }
    },
    {
      "name": "10. Queue Stats - All Queues",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/queue/stats",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "queue", "stats"]
        },
        "description": "Thống kê tất cả queues"
      }
    },
    {
      "name": "11. Queue Management - Clear Queues",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/queue/clear",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "queue", "clear"]
        },
        "description": "Xóa tất cả queues"
      }
    },
    {
      "name": "12. Queue Management - Pause Queues",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/queue/pause",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "queue", "pause"]
        },
        "description": "Tạm dừng queues"
      }
    },
    {
      "name": "13. Queue Management - Resume Queues",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/queue/resume",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "queue", "resume"]
        },
        "description": "Tiếp tục queues"
      }
    },
    {
      "name": "14. File Upload - Delete File",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/upload/{{filename}}",
          "host": ["{{baseUrl}}"],
          "path": ["upload", "{{filename}}"]
        },
        "description": "Xóa file"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL của API"
    },
    {
      "key": "filename",
      "value": "test-file.txt",
      "description": "Tên file để test"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate timestamp for unique filenames",
          "pm.globals.set('timestamp', Date.now());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save response data for chaining requests",
          "if (pm.response.json() && pm.response.json().data) {",
          "    pm.globals.set('lastUploadedFile', pm.response.json().data.filename || pm.response.json().data[0]?.filename);",
          "}"
        ]
      }
    }
  ]
}



