{
  "info": {
    "name": "Bus & Ticket Management API Collection",
    "description": "Collection để test API quản lý xe (Bus) và vé (Ticket)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Admin\",\n  \"last_name\": \"User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwtToken', response.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Bus Management",
      "item": [
        {
          "name": "Create Bus",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Xe khách 45 chỗ\",\n  \"descriptions\": \"Xe khách hiện đại, tiện nghi\",\n  \"license_plate\": \"29A-12345\",\n  \"capacity\": 45,\n  \"company_id\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/buses",
              "host": ["{{baseUrl}}"],
              "path": ["buses"]
            }
          }
        },
        {
          "name": "Get All Buses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/buses?page=1&limit=10&sortBy=name&sortOrder=ASC",
              "host": ["{{baseUrl}}"],
              "path": ["buses"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sortBy",
                  "value": "name"
                },
                {
                  "key": "sortOrder",
                  "value": "ASC"
                }
              ]
            }
          }
        },
        {
          "name": "Get Bus by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/buses/1",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "1"]
            }
          }
        },
        {
          "name": "Get Available Buses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/buses/available",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "available"]
            }
          }
        },
        {
          "name": "Get Buses with Schedules",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/buses/with-schedules",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "with-schedules"]
            }
          }
        },
        {
          "name": "Get Buses by Company",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/buses/company/1",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "company", "1"]
            }
          }
        },
        {
          "name": "Get Bus Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/buses/1/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "1", "statistics"]
            }
          }
        },
        {
          "name": "Update Bus",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Xe khách 50 chỗ\",\n  \"capacity\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/buses/1",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "1"]
            }
          }
        },
        {
          "name": "Delete Bus",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/buses/1",
              "host": ["{{baseUrl}}"],
              "path": ["buses", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Ticket Management",
      "item": [
        {
          "name": "Create Ticket",
          "request": {
            "method": "POST",
