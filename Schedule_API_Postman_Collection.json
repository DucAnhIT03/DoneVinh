{
  "info": {
    "name": "Schedule API Collection",
    "description": "Collection để test API lịch trình di chuyển",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwtToken', response.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Schedule Management",
      "item": [
        {
          "name": "Create Schedule",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"routeId\": 1,\n  \"busId\": 1,\n  \"departureTime\": \"2024-01-15T08:00:00Z\",\n  \"arrivalTime\": \"2024-01-15T12:00:00Z\",\n  \"availableSeat\": 40,\n  \"totalSeats\": 40,\n  \"status\": \"AVAILABLE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/schedules",
              "host": ["{{baseUrl}}"],
              "path": ["schedules"]
            }
          }
        },
        {
          "name": "Get All Schedules",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules?page=1&limit=10&sortBy=departureTime&sortOrder=ASC",
              "host": ["{{baseUrl}}"],
              "path": ["schedules"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sortBy",
                  "value": "departureTime"
                },
                {
                  "key": "sortOrder",
                  "value": "ASC"
                }
              ]
            }
          }
        },
        {
          "name": "Get Schedule by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules/1",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "1"]
            }
          }
        },
        {
          "name": "Update Schedule",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"availableSeat\": 35,\n  \"status\": \"AVAILABLE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/schedules/1",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "1"]
            }
          }
        },
        {
          "name": "Delete Schedule",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/schedules/1",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Schedule Search & Filter",
      "item": [
        {
          "name": "Get Popular Routes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules/popular-routes",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "popular-routes"]
            }
          }
        },
        {
          "name": "Get Schedules by Route",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules/route/1?departureDate=2024-01-15",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "route", "1"],
              "query": [
                {
                  "key": "departureDate",
                  "value": "2024-01-15"
                }
              ]
            }
          }
        },
        {
          "name": "Get Schedules by Bus",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules/bus/1?departureDate=2024-01-15",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "bus", "1"],
              "query": [
                {
                  "key": "departureDate",
                  "value": "2024-01-15"
                }
              ]
            }
          }
        },
        {
          "name": "Search Schedules with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules?routeId=1&departureDate=2024-01-15&status=AVAILABLE&page=1&limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["schedules"],
              "query": [
                {
                  "key": "routeId",
                  "value": "1"
                },
                {
                  "key": "departureDate",
                  "value": "2024-01-15"
                },
                {
                  "key": "status",
                  "value": "AVAILABLE"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Schedule Operations",
      "item": [
        {
          "name": "Update Available Seats",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"seatsToBook\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/schedules/1/update-seats",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "1", "update-seats"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Testing",
      "item": [
        {
          "name": "Create Schedule - Invalid Time",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"routeId\": 1,\n  \"busId\": 1,\n  \"departureTime\": \"2024-01-15T12:00:00Z\",\n  \"arrivalTime\": \"2024-01-15T08:00:00Z\",\n  \"availableSeat\": 40,\n  \"totalSeats\": 40\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/schedules",
              "host": ["{{baseUrl}}"],
              "path": ["schedules"]
            }
          }
        },
        {
          "name": "Create Schedule - Invalid Seats",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"routeId\": 1,\n  \"busId\": 1,\n  \"departureTime\": \"2024-01-15T08:00:00Z\",\n  \"arrivalTime\": \"2024-01-15T12:00:00Z\",\n  \"availableSeat\": 50,\n  \"totalSeats\": 40\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/schedules",
              "host": ["{{baseUrl}}"],
              "path": ["schedules"]
            }
          }
        },
        {
          "name": "Get Non-existent Schedule",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/schedules/999",
              "host": ["{{baseUrl}}"],
              "path": ["schedules", "999"]
            }
          }
        }
      ]
    }
  ]
}

