              "raw": "{{baseUrl}}/stations/nearby?latitude=10.7769&longitude=106.7009&radius=5",
              "host": ["{{baseUrl}}"],
              "path": ["stations", "nearby"],
              "query": [
                {"key": "latitude", "value": "10.7769"},
                {"key": "longitude", "value": "106.7009"},
                {"key": "radius", "value": "5"}
              ]
            }
          }
        },
        {
          "name": "7. Get Station Statistics",
          "request": {
            "method": "GET",
            "header": [],
