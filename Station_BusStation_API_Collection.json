                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Central Bus Station\",\n  \"capacity\": 1200,\n  \"facilities\": [\"WiFi\", \"Restaurant\", \"ATM\", \"Parking\", \"Waiting Room\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/stations/{{station_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["stations", "{{station_id}}"]
            }
          }
        },
        {
          "name": "9. Delete Station",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/stations/{{station_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["stations", "{{station_id}}"]
