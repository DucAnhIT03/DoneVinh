  },
  "item": [
    {
      "name": "Station APIs",
      "item": [
        {
          "name": "1. Create Station",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Central Bus Station\",\n  \"address\": \"123 Main Street\",\n  \"city\": \"Ho Chi Minh City\",\n  \"province\": \"Ho Chi Minh\",\n  \"latitude\": 10.7769,\n  \"longitude\": 106.7009,\n  \"isActive\": true,\n  \"description\": \"Main bus station in the city center\",\n  \"phone\": \"+84 28 1234 5678\",\n  \"email\": \"info@centralstation.com\",\n  \"facilities\": [\"WiFi\", \"Restaurant\", \"ATM\", \"Parking\"],\n  \"capacity\": 1000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/stations",
              "host": ["{{baseUrl}}"],
              "path": ["stations"]
            }
          }
        },
        {
          "name": "2. Get All Stations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/stations?page=1&limit=10&sortBy=name&sortOrder=asc",
              "host": ["{{baseUrl}}"],
              "path": ["stations"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"},
                {"key": "sortBy", "value": "name"},
                {"key": "sortOrder", "value": "asc"}
              ]
            }
          }
        },
        {
          "name": "3. Get Station by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/stations/{{station_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["stations", "{{station_id}}"]
            }
          }
        },
        {
          "name": "4. Get Stations by City",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/stations/city/Ho Chi Minh City",
